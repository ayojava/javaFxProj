<?xml version="1.0" encoding="UTF-8"?>
<?import java.net.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.shape.*?>

<VBox xmlns:fx="http://javafx.com/fxml">
    <MenuBar fx:id="menuBar">
        <menus>
            <Menu text="_File" mnemonicParsing="true" >
                <items>
                    <MenuItem text="Update" onAction="#handleUpdateAction"/>
                </items>
                <items>
                    <MenuItem text="E_xit" onAction="#handleExitAction" accelerator="ctrl+q"/>
                </items>
            </Menu>
            <Menu text="_Help" mnemonicParsing="true" >
                <items>
                    <MenuItem text="_About" onAction="#handleAboutAction"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    
    <GridPane alignment="center"  hgap="10" vgap="10"  fx:id="layoutgrid">
        <padding>
            <Insets top="25" right="25" bottom="10" left="25"/>
        </padding>
        <Text  text="Welcome"  fx:id="actionTarget"  GridPane.columnIndex="0"  GridPane.rowIndex="0"  GridPane.columnSpan="1"/>

        <Rectangle  fx:id="rect1"  x="10"  y="10"  width="100"  height="100" fill="#ff0000" GridPane.columnIndex="0"  GridPane.rowIndex="1"
        />
        <Rectangle 
            fx:id="rect2" 
            x="10" 
            y="10" 
            width="100" 
            height="100" 
            fill="#00ff00" 
            GridPane.columnIndex="1" 
            GridPane.rowIndex="1" 
        />

        <Rectangle 
            fx:id="rect3" 
            x="10" 
            y="10" 
            width="100" 
            height="100" 
            fill="#0000ff" 
            GridPane.columnIndex="2" 
            GridPane.rowIndex="1" 
        />
        
        <Rectangle 
            fx:id="rect4" 
            x="10" 
            y="10" 
            width="100" 
            height="100" 
            fill="#ffff00" 
            GridPane.columnIndex="0" 
            GridPane.rowIndex="2" 
        />

        <Button 
            text="Shuffle" 
            onAction="#handleShuffle"     
            GridPane.columnIndex="1" 
            GridPane.rowIndex="2"
            GridPane.columnSpan="1"
            prefWidth="100"
            prefHeight="100"
        />
        
        <Rectangle 
            fx:id="rect5" 
            x="10" 
            y="10" 
            width="100" 
            height="100" 
            fill="#ff0000" 
            GridPane.columnIndex="2" 
            GridPane.rowIndex="2" 
        />
        <Rectangle 
            fx:id="rect6" 
            x="10" 
            y="10" 
            width="100" 
            height="100" 
            fill="#00ff00" 
            GridPane.columnIndex="0" 
            GridPane.rowIndex="3" 
        />

        <Rectangle 
            fx:id="rect7" 
            x="10" 
            y="10" 
            width="100" 
            height="100" 
            fill="#0000ff" 
            GridPane.columnIndex="1" 
            GridPane.rowIndex="3" 
        />
        
        <Rectangle 
            fx:id="rect8" 
            x="10" 
            y="10" 
            width="100" 
            height="100" 
            fill="#ffff00" 
            GridPane.columnIndex="2" 
            GridPane.rowIndex="3" 
        />
        
    </GridPane>
</VBox>